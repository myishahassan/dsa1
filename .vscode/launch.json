{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++: g++ build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ],
  "configurations": [
    {
      "name": "C++ Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "preLaunchTask": "C++: g++ build active file"
    }

  ]
}
